<div class="catalog__filter filter-catalog" data-filter-catalog>
	<div class="filter-catalog__header">
		<button class="filter-catalog__title">
			<svg class="filter-catalog__title-icon">
				<use xlink:href="catalog/view/theme/pinka/assets/img/icons/icons.svg#filter"></use>
			</svg>
			{{ heading_title }}
		</button>
		<button class="close-btn">
			<svg class="filter-catalog__title-icon">
				<use xlink:href="catalog/view/theme/pinka/assets/img/icons/icons.svg#close"></use>
			</svg>
		</button>
	</div>

	{% for filter_group in filter_groups %}
		<div class="filter-catalog__item item-filter-catalog">
			<button class="item-filter-catalog__heading accordion-heading_active">
				{{ filter_group.name }}
				<svg class="item-filter-catalog__icon">
					<use xlink:href="catalog/view/theme/pinka/assets/img/icons/icons.svg#filter-arrow"></use>
				</svg>
				<svg class="item-filter-catalog__icon">
					<use xlink:href="catalog/view/theme/pinka/assets/img/icons/icons.svg#filter-arrow"></use>
				</svg>
			</button>
			<div class="item-filter-catalog__content accordion-content_active" id="filter-group{{ filter_group.filter_group_id }}">
				{% for filter in filter_group.filter %}
					<div class="item-filter-catalog__checkbox checkbox">
						{% if filter.filter_id in filter_category %}
							<input id="{{filter.filter_id}}" type="checkbox" class="checkbox__input" value="{{ filter.filter_id }}" name="filter[]" checked="checked"/>
							<label for="{{filter.filter_id}}" class="checkbox__label">
								<span class="checkbox__text">{{ filter.name }}</span>
							</label>
						{% else %}
							<input id="{{filter.filter_id}}" type="checkbox" class="checkbox__input" value="{{ filter.filter_id }}" name="filter[]"/>
							<label for="{{filter.filter_id}}" class="checkbox__label">
								<span class="checkbox__text">{{ filter.name }}</span>
							</label>
						{% endif %}
					</div>
				{% endfor %}
			</div>

		</div>

	{% endfor %}

	<button type="button" id="button-filter" class="btn">{{ filter_button }}</button>
</div>

